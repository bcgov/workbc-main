function ssotRegionInfo() {

  $region_info = array();

  $regions = ssotRegions();
  $id = ssotRegionIds();
  $links = ssotRegionLinks();

  foreach ($regions as $key => $name) {
    $region = array(
      "id" => $id[$key],
      "key" => $key,
      "name" => $name,
      "link" => $links[$key],
    );
    $region_info[] = $region;
  }
  $id_values = array_column($region_info, "id");
  array_multisort($id_values, SORT_ASC, $region_info);
  return $region_info;
}


function ssotProcessEmploymentIndustry($ssotdata) {

  if (empty($ssotdata)) {
    return [];
  }

  $industries = ssotIndustries();
  $sectors = ssotIndustrySectors();

  $data = [];
  foreach ($industries as $key => $name) {
    $nid = \Drupal::entityQuery('node')
      ->condition('title', $name)
      ->sort('nid', 'DESC')
      ->execute();
    $nid = reset($nid);

    $data[] = array(
      'key' => $key,
      'name' => $name,
      'share' => $ssotdata[$key],
      'sector' => $sectors[$key],
      'employment' => $ssotdata[$key."_num"],
      'link' => \Drupal::service('path_alias.manager')->getAliasByPath('/node/'. $nid),
    );
  }

  return $data;
}

