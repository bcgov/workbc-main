function ssotLatestMonthlyLabourMarketUpdate($sourceData) {
  $latestKey = "000000";
  $latestIdx = 0;
  foreach ($sourceData as $idx => $data) {
    $key = $data['year'] . str_pad($data['month'], 2, "0", STR_PAD_LEFT);
    if ($key > $latestKey) {
      $latestKey = $key;
      $latestIdx = $idx;
    }
  }
  return $latestIdx;
}


