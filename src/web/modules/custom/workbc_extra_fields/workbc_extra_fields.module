function ssotCareerProfile($noc) {
  return querySSoT('http://ssot:3000/wages?noc=eq.' . $noc);
}

function querySSoT($url) {
  $client = new Client();
  try {
    $response = $client->get($url);
    $result = json_decode($response->getBody(), TRUE);
    if (isset($result[0])) {
      $data = $result[0];
      ksm($data);
      return $data;
    }
  }
  catch (RequestException $e) {
    // log exception
  }
}
