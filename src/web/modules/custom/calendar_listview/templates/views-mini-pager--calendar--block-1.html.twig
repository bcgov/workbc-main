{#
/**
 * @file
 * Theme override for a views mini-pager.
 *
 * Available variables:
 * - heading_id: Pagination heading ID.
 * - items: List of pager items.
 *
 * @see template_preprocess_views_mini_pager()
 */
#}
{% if items.previous or items.next %}
  <div class="pager"">
    {% if not items.previous %}
      <div class="pager__item pager__item--previous">
        <a href="{{ path('<current>') }}?mode=archive" title="Go to archive events">
          <img src="/modules/custom/calendar_listview/images/arrow-left.svg" class="icon arrow-left" alt="Arrow left icon"/>
          <span>Previous Events</span> 
        </a>
      </div>
    {% endif %}
    <ul class="pager__items js-pager__items">
      {% if items.previous %}
        <li class="pager__item pager__item--previous">
          <a href="{{ items.previous.href }}" title="{{ 'Go to previous page'|t }}" rel="prev"{{ items.previous.attributes|without('href', 'title', 'rel') }}>
          <img src="/modules/custom/calendar_listview/images/arrow-left.svg" class="icon arrow-left" alt="Arrow left icon"/>
            <span class="visually-hidden">{{ 'Previous page'|t }}</span>
            <span aria-hidden="true">{{ items.previous.text|default('‹‹'|t) }}</span>
          </a>
        </li>
      {% endif %}
      {% if items.current %}
        <li class="pager__item is-active">
          {% trans %}
            Page {{ items.current }}
          {% endtrans %}
        </li>
      {% endif %}
      {% if items.next %}
        <li class="pager__item pager__item--next">
          <a href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next"{{ items.next.attributes|without('href', 'title', 'rel') }}>
            <span class="visually-hidden">{{ 'Next page'|t }}</span>
            <span aria-hidden="true">{{ items.next.text|default('››'|t) }}</span>
            <img src="/modules/custom/calendar_listview/images/arrow-right.svg" class="icon arrow-right" alt="Arrow right icon"/>
          </a>
        </li>
      {% endif %}
    </ul>
  </div>
  
{% else%}
  <div class="pager">
    {% if not items.previous %}
      <div class="pager__item pager__item--previous">
        <a href="{{ path('<current>') }}?mode=archive" title="Go to archive events">
          <img src="/modules/custom/calendar_listview/images/arrow-left.svg" class="icon arrow-left" alt="Arrow left icon"/>
          <span>Previous Events</span>
        </a>
      </div>
    {% endif %}
  </div>
{% endif %}
