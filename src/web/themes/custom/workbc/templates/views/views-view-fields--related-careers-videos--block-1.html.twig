<div class="related-carrer">
    <div class="workbc-card-video-preview">
        <a href="/career-profiles/{{ fields.title.content|striptags|trim|lower|replace({' ': '-'})|replace({',': ''}) }}">
            <div class="workbc-card-thumbnail">{{ fields.field_career_videos.content }}</div>
        </a>
    </div>
    <div class="workbc-card-content">
        <div class="title">
            {{ fields.title.content }}
        </div>
        <div class="category">
            {{ fields.name.content }}
        </div>
        <div class="city-location">
            {{ fields.custom_location.content }}
        </div>
    </div>
</div>